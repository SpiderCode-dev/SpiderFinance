<script>
    const MapClients = new MapBuilder(
        'map-clients',
        -0.2853451502536884,
        -78.5433042353088
    );


    $('#search-map').on('click', () => {
        fetch('/MapsClientController?action=get-clients-location')
            .then(response => response.json())
            .then(json => {
                for(let coord of json) {
                    MapClients.addMarkerWithInfoWindow(
                        coord.lat,
                        coord.lng,
                        coord.id,
                        'Hola don vergas'
                    );
                }
            })
    })

</script>