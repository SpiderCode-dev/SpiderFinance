<?xml version="1.0" encoding="UTF-8" ?>
<view>
    <columns>
        <group name="Abono" numcolumns="12" icon="fas fa-dollar-sign">
            <column name="iddocument" display="none">
                <widget type="text" fieldname="iddocument"/>
            </column>
            <column name="typedoc" display="none">
                <widget type="text" fieldname="typedoc"/>
            </column>
            <column name="invoice" numcolumns="2">
                <widget type="select" fieldname="iddocument" onclick="EditFacturaCliente" readonly="true">
                    <values fieldcode="idfactura" fieldtitle="codigo" source="facturascli"/>
                </widget>
            </column>
            <column name="customer">
                <widget type="autocomplete" fieldname="codcliente" onclick="EditCliente" readonly="true">
                    <values source="Cliente" fieldcode="codcliente" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="concept" numcolumns="6" description="Escribir una referencia del pago (Ej: nÃºmero de comprobante)">
                <widget type="text" fieldname="concept"/>
            </column>
            <column name="value" numcolumns="2">
                <widget type="money" fieldname="importe"/>
            </column>
            <column name="created_at" numcolumns="3">
                <widget type="date" fieldname="created_at" icon="fas fa-calendar"/>
            </column>
            <column name="payment-method" numcolumns="3">
                <widget type="select" fieldname="codpago" onclick="EditFormaPago">
                    <values source="formaspago" fieldcode="codpago" fieldtitle="descripcion"/>
                </widget>
            </column>
            <column name="observations" numcolumns="10">
                <widget type="textarea" fieldname="observations"/>
            </column>
        </group>
    </columns>
</view>