<?xml version="1.0" encoding="UTF-8"?>

<view>
    <columns>
        <column name="concept">
            <widget type="text" fieldname="concept" />
        </column>
        <column name="import">
            <widget type="money" fieldname="importe" />
        </column>
        <column name="created_at">
            <widget type="date" fieldname="created_at" />
        </column>
        <column name="payment-method" numcolumns="2" titleurl="ListFormaPago">
            <widget type="select" fieldname="codpago" onclick="EditFormaPago">
                <values source="formaspago" fieldcode="codpago" fieldtitle="descripcion"/>
            </widget>
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="success" fieldname="importe">gt:0</option>
        </row>
        <row type="actions">
            <button type="action" label="Pagar y ajustar" color="success" action="pay-adjust" icon="fas fa-file-invoice-dollar"/>
        </row>
    </rows>
</view>